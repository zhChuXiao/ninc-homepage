root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2 